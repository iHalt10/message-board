<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message,html: {class: 'form-inline'}) do |f| %>
  <div class="form-group">
    <label for="message_name">名前:</label>
    <%= f.text_field :name, class:"form-control" ,id:"message_name"%>
  </div>
  <div class="form-group">
    <label for="message_body">内容:</label>
    <%= f.text_area :body ,class:"form-control" ,id:"message_body",rows:1%>
  </div>
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>