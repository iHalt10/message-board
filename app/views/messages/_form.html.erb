<%= form_for(@message,html: {class: 'form-inline'}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <label for="message_name">名前:</label>
    <%= f.text_field :name, class:"form-control" ,id:"message_name"%>
  </div>
  <div class="form-group">
    <label for="message_body">内容:</label>
    <%= f.text_area :body ,class:"form-control" ,id:"message_body",rows:1%>
  </div>
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>